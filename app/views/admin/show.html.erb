<div class="container">
    <span class="display-6"><%= @company.name %></span><button class="btn btn-primary float-end"><%= link_to "管理公司資訊", edit_admin_company_path(id: @company.id), class: "link-to" %></button>
    <section class="container">
        <h6 class="fw-light">目前職缺</h6>
        
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">職缺名稱</th>
                <th scope="col">工作內容</th>
                <th scope="col">薪資範圍</th>
                <th scope="col">顯示狀態</th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            <% @company.jobs.each do |job| %>
                <tr>
                <td><%= link_to job.name, edit_admin_job_path(job.id) %></td>
                <td><%= job.content %></td>
                <td><%= job.wage %></td>
                <td>
                    <% if (job.status == 1) %>
                        <%= '開放' %>
                    <% else %>
                        <%= '不開放' %>
                    <% end %>
                    
                </td>
                <td>
                   <%= link_to image_tag("bin.png", border: 0,class: "bin-image"), job_path(job.id), method: "delete" %>
                </td>
                </tr>
            <% end %>
            </tbody>
        </table>
        
        <button class="btn btn-primary"><%= link_to "新增職缺", "jobs/new/"+@company.id.to_s , class: "link-to"%></button>
    </section>
</div>